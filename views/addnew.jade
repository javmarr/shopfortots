extends layout
div#addpage
  block content
    h1= title
    br
    a(href="/") Home
    p Add a gift to the list by pasting the Amazon URL to the box below.
    form(action ='', method = "post")
      if (error && error.message)
        p(style="color: red") Error: #{error.message}
      input(type='text', name='url', placeholder='New URL...')
      input(type='submit', value='Submit')
